{
  "name": "hibar",
  "version": "0.3.3",
  "description": "JavaScript's missing functions",
  "repository": "https://github.com/nickaversano/hibar/issues",
  "author": "Nick Aversano",
  "license": "MIT",
  "private": false,
  "main": "./lib",
  "files": ["lib", "polyfill.js"],
  "scripts": {
    "format":
      "yarn f $(git ls-files -c -m | grep '\\.\\(jsx\\?\\|json\\|scss\\)$' | tr '\n' ' ')",
    "f": "node_modules/.bin/prettier --config .prettierrc --write",
    "lib": "babel src --out-dir lib --source-maps",
    "test": "mocha",
    "precommit": "lint-staged",
    "pub": "yarn lib && np"
  },
  "lint-staged": {
    "*.{js,jsx,json,scss}": ["yarn f", "git add"]
  },
  "dependencies": {
    "lodash.merge": "^4.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "mocha": "^4.0.1",
    "prettier": "^1.8.1"
  }
}
